# ============================================================================
# Phase 1: Foundation & Low-Risk Improvements
# ============================================================================
# Execution tracing
EXECUTION_TRACE_ENABLED=true
MAX_EXECUTION_TRACE_LENGTH=100

# Conversation history
MAX_CONVERSATION_HISTORY=5       # Number of Q&A exchanges to keep
MAX_MESSAGES_HISTORY=10          # Total messages (user + assistant) to keep

# ============================================================================
# Phase 2: Quality Gates
# ============================================================================
# Verifier settings
USE_VERIFIER=true
MAX_VERIFIER_TOKENS=2000

# Grader settings
USE_GRADER=true
MAX_DOCS_TO_GRADE=10
MAX_GRADER_TOKENS=4000

# ============================================================================
# Deep Desktop Agent (Phase 3)
# ============================================================================
# Deep agent enable/disable
DEEP_AGENT_ENABLED=true
MAX_DEEP_AGENT_ITERATIONS=10

# Workspace configuration
WORKSPACE_BASE_PATH=/workspace
WORKSPACE_RETENTION_HOURS=24

# Interrupt settings
INTERRUPT_DESTRUCTIVE_ACTIONS=true
INTERRUPT_APPROVAL_TIMEOUT=300

# Tool result eviction
MAX_INLINE_TOOL_RESULT=3000

# Feature flags (for incremental rollout)
ENABLE_DEEP_PLANNING=true
ENABLE_TOOL_EVICTION=true
ENABLE_AUTO_SUMMARIZATION=true
