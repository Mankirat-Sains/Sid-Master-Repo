{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DocAgentOperations",
  "type": "object",
  "required": ["schema_version", "ops"],
  "properties": {
    "schema_version": {
      "type": "integer",
      "enum": [1]
    },
    "ops": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["op"],
        "properties": {
          "op": {
            "type": "string",
            "enum": [
              "replace_text",
              "insert_paragraph",
              "insert_heading",
              "delete_block",
              "set_style",
              "reorder_blocks"
            ]
          },
          "target": {
            "type": "object"
          },
          "text": { "type": "string" },
          "level": { "type": "integer" },
          "style": { "type": "string" },
          "from_index": { "type": "integer" },
          "to_index": { "type": "integer" }
        }
      }
    },
    "save_as": { "type": "string" }
  }
}
